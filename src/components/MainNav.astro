---
const navItems = [
  { label: "Inicio", href: "/" },
  { label: "CBI", href: "#" },
  { label: "Oferta Académica", href: "#" },
  { label: "Investigación", href: "#" },
  { label: "Docencia", href: "#" },
  { label: "Comunidad", href: "#" },
  { label: "Difusión", href: "#" },
  { label: "Consejo Divisional", href: "#" },
];
---

<div
  class={`bg-[#222] text-white sticky top-0 z-100 transition-all duration-300`}
>
  <div class="container mx-auto">
    <div class="flex justify-between items-center py-3 px-4 md:px-0">
      <button class="md:hidden"> </button>

      {/* Desktop Navigation */}
      <nav class="hidden md:flex space-x-8">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="text-sm font-medium hover:text-[#6b9d28] transition-colors py-1 relative group"
            >
              {item.label}
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#6b9d28] transition-all duration-300 group-hover:w-full" />
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</div>
